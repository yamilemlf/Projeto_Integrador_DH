<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/login.css" />
  </head>
  <body>
    <main>
      <div class="login-container">
        <div class="box-centro-branco">
          <div class="box-login">
            <div class="alinha-logo">
              <img
                class="img-logo"
                src="https://image.freepik.com/vetores-gratis/logotipo-de-petshop-para-gatos-e-caes_9645-750.jpg"
                class="imagen-login"
              />
            </div>
            <div class="login-forms">
              <form action="" method="POST">
                <% if (userinexist === true) { %>
                  <span id="created">Usuário não cadastrado!</span>
                  <% } %>
                  <% if (usercreate === true) { %>
                    <span id="created">Usuário Cadastrado!</span>
                    <% } %>
                    <% if (errorPassword === true) { %>
                      <span id="created">Senha inválida!</span>
                      <% } %>
                <input
                  type="text"
                  name="email"
                  id="login"
                  placeholder="Login"
                  class="login"
                  required
                />
                <input
                  type="password"
                  name="password"
                  id="password"
                  placeholder="Senha"
                  class="password"
                  required
                />
                <input type="submit" name="botao" value="Enviar" class="btn" />
              </form>
              <div>
                <br />
                <a class="lembrar-senha" href="/">Voltar</a>
              </div>

                <a class="lembrar-senha" href="/register">Cadastra-se</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
    </main>
    <!-- Bootstrap and Javascript -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
